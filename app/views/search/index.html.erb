<h1><%= params[:nation].titleize.gsub('+', ' ') %></h1>

<div class="total-characters">
  <p>Total number of people who live in the Fire Nation: <%= @total_characters %></p>
</div>

<% @characters.each do |character| %>
  <div class="character">
    <h2><%= character.name %></h2>
    <% if character.photo_url.present? %>
      <%= image_tag character.photo_url, class: "character-photo" %>
    <% end %>
    <p><strong>Allies:</strong> <%= character.allies.present? ? character.allies.join(', ') : 'None' %></p>
    <p><strong>Enemies:</strong> <%= character.enemies.present? ? character.enemies.join(', ') : 'None' %></p>
    <p><strong>Affiliations:</strong> <%= character.affiliation.present? ? character.affiliation.join(', ') : 'None' %></p>
  </div>
<% end %>